{
	"compilerOptions": {
	  "target": "ES2022",
	  "lib": ["ES2023"],
	  "module": "ESNext",
	  "skipLibCheck": true,
	  /* Bundler mode */
	  "moduleResolution": "node",
	  "isolatedModules": true,
	  "moduleDetection": "force",
	  "noEmit": false,
	  "outDir": "./backendDist/",

	  /* Linting */
	  "strict": true,
	  "noUnusedLocals": false,
	  "noUnusedParameters": false,
	  "noFallthroughCasesInSwitch": true,
	  "esModuleInterop": true, 
	  "resolveJsonModule": true
	},
	"include": ["backendSrc/**/*"]
  }